= form_for @docview do |f|
  -if @docview.errors.any?
    #error_explanation
      %h2= "#{pluralize(@docview.errors.count, "error")} prohibited this docview from being saved:"
      %ul
        - @docview.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content,
                  :rows=>6
  .actions
    = f.submit 'Save'
