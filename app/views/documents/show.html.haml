%p
  %b Title:
  %h1= @document.title
%p
  %b Category:
  = Category.find(@document.category_id).name
%p
  %b Author:
  = @document.author
%p
  %b Date:
  = @document.date
%p
  %b Body:
  =  raw @document.body 

- if user_signed_in?
  = link_to 'Edit', edit_document_path(@document)
- else
  = link_to 'Login', new_user_session_path 
\|
= link_to 'Back', documents_path
